<h1>My Tasks</h1>
<% @tasks.each do |task|%>
<p>
  Completed: <%= task.completed %>
</p>
  <%= link_to(task.title, task_path(task)) %>
  <%= link_to "Delete #{task.title}", delete_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
<%end%>


<%= link_to("Create new task", new_path)  %>
